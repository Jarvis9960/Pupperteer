<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{{title}}</title>

  <link rel="stylesheet" href="	https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="../styles/styles.css" />
</head>

<body>

  <div class="text-center">
    <h2>
      {{name}}
    </h2>
  </div>
  <hr class="mainLine">
  <div class="text-left">
    <div class="row">
      <div class="customColColor customCol col">
        <div>
          <h4>Contact</h4>
          <hr>
          <div>
            <p class="heading">
              Address :
            </p>
            <p>
              {{contact.Address}}
            </p>
          </div>
          <div>
            <p class="heading">
              Phone :
            </p>
            <p>
              {{contact.Phone}}
            </p>
          </div>
          <div>
            <p class="heading">
              Email :
            </p>
            <p>
              {{contact.Email}}
            </p>
          </div>
          <div>
            <p class="heading">
              LinkedIn :
            </p>
            <p>
              {{contact.LinkedIN}}
            </p>
          </div>
          <div>
            <h4>Language</h4>
            <hr>
            <p>
              {{#each Languages as | Language |}}
              {{Language}}
              <br>
              {{/each}}
            </p>
          </div>
          <div>
            <h4>Hobbies</h4>
            <hr>
            <p>
              {{#each hobbies as | hobby |}}
              {{hobby}}
              <br>
              {{/each}}
            </p>
          </div>
        </div>
      </div>
      <div class="rightColumn col">
        <div>
          <h4>Summary</h4>
          <hr>
          <p>
            {{summary}}
          </p>
        </div>
        <div>
          <h4>Skills Highlights</h4>
          <hr>
          <p>
            {{#each Skills as | Skill |}}
            {{Skill}}
            {{/each}}
          </p>
        </div>
        <div>
          <h4>Experience</h4>
          <hr>
          <p>
            {{Experience.role}}<span>{{Experience.duration}}</span>
          </p>
           <p>
            {{Experience.company}}<span>{{Experience.place}}</span>
            {{#each Experience.summary as | work |}} 
            <br>
            <span>â€¢ </span>
            {{work}}
            {{/each}}
          </p>
        </div>
        <div>
          <h4>Education</h4>
          <hr>
          <p>{{Experience.Education.Degree}}<span>
            {{Experience.Education.University}}
          </span><span>
            {{Experience.Education.Duration}}
          </span></p>
        </div>
        <div>
          <h4>Certification</h4>
          <hr>
          <p>
           {{Experience.Certification.Certificate}}
          </p>
          <p>
            {{Experience.Certification.programmingLanguages}}
          </p>
        </div>
      </div>
    </div>


</body>

</html>